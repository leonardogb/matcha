

        <div class="blockFixe">
            <div class="row contenedorChat">
                <div id="<%= login %>" class="blockChat">
                    <div class="popup-box chat-popup" id="qnimate">
                        <div class="popup-head">
                            <div class="popup-head-left pull-left"><img id="userImg" src="<%= userImg %>" alt="<%= login %>"> <%= login %></div>
                            <div class="popup-head-right pull-right">
                                <button data-widget="remove" id="removeClass" class="chat-header-button pull-right" type="button">
                                    <i class="fa fa-power-off"></i>
                                </button>
                            </div>
                        </div>
                        <div class="popup-messages">
                            <div class="direct-chat-messages" id="mensajes">
                                <% if (tabuser && msg) { msg.forEach(function(elem){ if (id == elem.id_user) {%>
                                    <div>
                                        <div class="direct-chat-info clearfix">
                                            <span class="direct-chat-name pull-left"><%= login %></span>
                                        </div>
                                        <!-- /.direct-chat-info -->
                                        <img alt="message user image" src="<%= userImg %>" class="direct-chat-img"><!-- /.direct-chat-img -->
                                        <div class="triangulo-izq"></div>
                                        <div class="direct-chat-text"><%= elem.message %></div>
                                        <div class="direct-chat-info clearfix">
                                        <span class="direct-chat-timestamp pull-right"><%= elem.time %></span>
                                        </div>
                                        <div class="direct-chat-info clearfix"></div>
                                        <!-- /.direct-chat-text -->
                                    </div>
                                <% } else { %>
                                    <div>
                                        <div class="direct-chat-info clearfix">
                                            <span class="direct-chat-name-right pull-right"><%= tabuser.login%></span>
                                        </div>
                                        <!-- /.direct-chat-info -->
                                        <img alt="message user image" src="<%= tabuser.img0 %>" class="direct-chat-img-right"><!-- /.direct-chat-img -->
                                        <div class="triangulo-der"></div>
                                        <div class="direct-chat-text-right"><%= elem.message %></div>
                                        <div class="direct-chat-info clearfix">
                                        <span class="direct-chat-timestamp pull-left"><%= elem.time %></span>
                                        </div>
                                        <div class="direct-chat-info clearfix"></div>
                                        <!-- /.direct-chat-text -->
                                    </div>
                                <% } });}%>
                            </div>
                        </div>
                        <div class="popup-messages-footer">
                            <textarea id="status_message" placeholder="Type a message..." rows="10" cols="40" name="message"></textarea>
                            <!-- <div class="btn-footer"> -->
                            <button id="enviar" class="btn-outline-info rounded-circle boton">
                                <i class="fa fa-share"></i>
                            </button>
                        </div>
                        <!-- <div class="btn-footer"></div> -->
                    </div>
                    <div class="round hollow text-center botonChat">
                        <a id="addClass"><span class="fa fa-comment"></span> Chat </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
